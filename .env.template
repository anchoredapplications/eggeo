# ============================
# üåê Public Settings
# ============================

NUXT_PUBLIC_URL=<your-site-url>
NUXT_PUBLIC_MAX_EGGS_PER_USER=200
NUXT_PUBLIC_MAPS_API_KEY=<your-google-maps-api-key>

# ============================
# üîê Auth Configuration
# ============================

NUXT_AUTH_SECRET=<your-nuxt-auth-secret>
AUTH_ORIGIN=<your-auth-origin-url>

# Google OAuth
NUXT_GOOGLE_CLIENT_ID=<your-google-client-id>
NUXT_GOOGLE_CLIENT_SECRET=<your-google-client-secret>

# ============================
# üõ¢Ô∏è Database (NEON / Postgres)
# ============================

# Prisma URL (recommended for Prisma projects)
POSTGRES_PRISMA_URL=postgres://<user>:<password>@<host>/<database>?connect_timeout=15&sslmode=require

# General pooled connection (recommended for apps)
DATABASE_URL=postgres://<user>:<password>@<pooled-host>/<database>?sslmode=require

# Direct / unpooled connection (for migrations, psql, etc.)
DATABASE_URL_UNPOOLED=postgresql://<user>:<password>@<unpooled-host>/<database>?sslmode=require

# Optional: Raw connection parameters
PGHOST=<pooled-host>
PGHOST_UNPOOLED=<unpooled-host>
PGUSER=<user>
PGDATABASE=<database>
PGPASSWORD=<password>

# Optional: Vercel/Neon variations
POSTGRES_URL=postgres://<user>:<password>@<pooled-host>/<database>?sslmode=require
POSTGRES_URL_NON_POOLING=postgres://<user>:<password>@<unpooled-host>/<database>?sslmode=require
POSTGRES_USER=<user>
POSTGRES_HOST=<pooled-host>
POSTGRES_PASSWORD=<password>
POSTGRES_DATABASE=<database>
POSTGRES_URL_NO_SSL=postgres://<user>:<password>@<pooled-host>/<database>
